---
// src/components/Proyectos.astro
import { Image } from 'astro:assets';
import portafolio from '../assets/portafolio.png'
import condominio from '../assets/condominio.png'
---

<section id="proyectos" class="min-h-screen max-w-5xl mx-auto py-12 px-6">
    <h2 class="section-subtitle">Mis Proyectos</h2>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-7">

        <div class="card flex flex-col hover:scale-105 transition-transform duration-300">
            <Image
                src={condominio}
                alt="Vista previa de la aplicación de administración de condominios"
                class="w-full h-48 object-cover rounded-t-lg aspect-video"
            />
            
            <div class="p-6 flex flex-col flex-grow">
                <h3 class="text-2xl font-bold mb-2">App de Administración de Condominios</h3>
                <p class="text-gray-400 mb-4 flex-grow">
                    Aplicación full-stack para gestionar pagos, anuncios y comunicación en condominios.
                </p>

                <div class="flex flex-wrap gap-2 mb-6 ">
                    <span class="tech-tag">Vite</span>
                    <span class="tech-tag">Vanilla JS</span>
                    <span class="tech-tag">Tailwind</span>
                    <span class="tech-tag">Node.js</span>
                </div>

                <div class="flex gap-4 mt-auto">
                    <a href="#" class="btn-primary w-full text-center">Ver Demo</a>
                    <a href="#" class="btn-secondary w-full text-center">Código</a>
                </div>
            </div>
        </div>

        <div class="card flex flex-col hover:scale-105 transition-transform duration-300">
            <Image
                src={portafolio}
                alt="Vista previa del portafolio personal"
                class="w-full h-48 object-cover rounded-t-lg aspect-video"
            />
            
            <div class="p-6 flex flex-col flex-grow">
                <h3 class="text-2xl font-bold mb-2">Portafolio Personal</h3>
                <p class="text-gray-400 mb-4 flex-grow">
                    Este mismo portafolio, construido como una SPA para demostrar habilidades en desarrollo front-end.
                </p>

                <div class="flex flex-wrap gap-2 mb-6">
                    <span class="tech-tag">Astro</span>
                    <span class="tech-tag">Tailwind</span>
                    <span class="tech-tag">Bun</span>
                </div>

                <div class="flex gap-4 mt-auto">
                    <a href="#" class="btn-primary w-full text-center">Ver Demo</a>
                    <a href="#" class="btn-secondary w-full text-center">Código</a>
                </div>
            </div>
        </div>

        <div class="card flex flex-col hover:scale-105 transition-transform duration-300">
            <Image
                src={portafolio}
                alt="Vista previa del portafolio personal"
                class="w-full h-48 object-cover rounded-t-lg aspect-video"
            />
            
            <div class="p-6 flex flex-col flex-grow">
                <h3 class="text-2xl font-bold mb-2">Portafolio Personal</h3>
                <p class="text-gray-400 mb-4 flex-grow">
                    Este mismo portafolio, construido como una SPA para demostrar habilidades en desarrollo front-end.
                </p>

                <div class="flex flex-wrap gap-2 mb-6">
                    <span class="tech-tag">Astro</span>
                    <span class="tech-tag">Tailwind</span>
                    <span class="tech-tag">Bun</span>
                </div>

                <div class="flex gap-4 mt-auto">
                    <a href="#" class="btn-primary w-full text-center">Ver Demo</a>
                    <a href="#" class="btn-secondary w-full text-center">Código</a>
                </div>
            </div>
        </div>


         

        </div>
</section>